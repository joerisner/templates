{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["ES6", "DOM"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "strict": true,
    "target": "ES6",
    "types": []
  },
  "exclude": ["./node_modules"]
}
